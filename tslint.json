{
    "defaultSeverity": "warning",
    "extends": "tslint-config-airbnb",
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
          "jsx": true
        }
    },
    "rules": {
        "indent": [ true, "tabs" ],
        "ter-indent": [
          true,
          "tab",
          {
            "SwitchCase": 1
          }
        ],
        "max-line-length": [ true, 150 ],
        "trailing-comma": [ false ],
        "increment-decrement": [true, "allow-post"],
        "no-increment-decrement": false,
        "object-shorthand-properties-first": false
    }
}